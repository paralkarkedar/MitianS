<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.about.AboutFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="220dp"
          android:scaleType="fitXY"
          android:id="@+id/college_image"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="@dimen/text_margin"
          android:layout_marginHorizontal="@dimen/text_margin"
          android:text="@string/about_college"
          android:textColor="@color/textColor"
          android:textSize="@dimen/text_size" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/text_margin"
         android:orientation="horizontal">

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:src="@drawable/ic_label"
           />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:text="Green Environment"
            android:layout_marginLeft="@dimen/text_margin"/>





      </LinearLayout>


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_margin="-20dp"
          android:padding="10dp"
          android:paddingBottom="10dp"
          android:text="Branch"
          android:textColor="@color/textColor"
          android:textSize="@dimen/title_size"
          android:textStyle="bold" />

      <androidx.viewpager.widget.ViewPager
          android:layout_width="wrap_content"
          android:layout_height="250dp"
         android:layout_marginTop="@dimen/text_margin"
         android:foregroundGravity="center"
         android:clipToPadding="false"
         android:overScrollMode="never"
          android:id="@+id/viewPager"/>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="36dp"
          android:background="@color/darkColor">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_margin="36dp"
             android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/text_margin"
                android:text="Top-Department"
                android:textColor="#fff"
                android:textSize="@dimen/title_size"
                android:textStyle="bold" />


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="#fff"
                   android:orientation="vertical">


                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_margin="8dp"
                      android:layout_marginHorizontal="@dimen/text_margin"
                      android:layout_marginTop="@dimen/text_margin"
                      android:text="Computer Science"
                      android:textColor="@color/textColor"
                      android:textSize="@dimen/text_size" />

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/grey" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_margin="8dp"
                      android:layout_marginHorizontal="@dimen/text_margin"
                      android:layout_marginTop="@dimen/text_margin"
                      android:text="Plastic And Polymers"
                      android:textColor="@color/textColor"
                      android:textSize="@dimen/text_size" />

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/grey" />


                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_margin="8dp"
                      android:layout_marginHorizontal="@dimen/text_margin"
                      android:layout_marginTop="@dimen/text_margin"
                      android:text="Electronics Engineering "
                      android:textColor="@color/textColor"
                      android:textSize="@dimen/text_size" />

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/grey" />


                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_margin="8dp"
                      android:layout_marginHorizontal="@dimen/text_margin"
                      android:layout_marginTop="@dimen/text_margin"
                      android:text="Agriculture Engineering"
                      android:textColor="@color/textColor"
                      android:textSize="@dimen/text_size" />

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/grey" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_margin="8dp"
                      android:layout_marginHorizontal="@dimen/text_margin"
                      android:layout_marginTop="@dimen/text_margin"
                      android:text="Mechanical Engineering"
                      android:textColor="@color/textColor"
                      android:textSize="@dimen/text_size" />

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/grey" />


                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_margin="8dp"
                      android:layout_marginHorizontal="@dimen/text_margin"
                      android:layout_marginTop="@dimen/text_margin"
                      android:text="Civil Engineering"
                      android:textColor="@color/textColor"
                      android:textSize="@dimen/text_size" />

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/grey" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_margin="8dp"
                      android:layout_marginHorizontal="@dimen/text_margin"
                      android:layout_marginTop="@dimen/text_margin"
                      android:text="Artificial And intelligence"
                      android:textColor="@color/textColor"
                      android:textSize="@dimen/text_size" />

                  <View
                      android:layout_width="wrap_content"
                      android:layout_height="1dp"
                      android:layout_marginVertical="8dp"
                      android:background="#000000"/>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:padding="@dimen/text_margin">



                     <ImageView
                         android:layout_width="276dp"
                         android:layout_height="162dp"
                         android:layout_gravity="center"
                         android:layout_margin="-10dp"
                         android:src="@drawable/mit" />




                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_horizontal"
                         android:layout_margin="-10dp"
                         android:text="Contact Details"
                         android:textColor="@color/textColor"
                         android:textSize="@dimen/title_size"
                         android:textStyle="bold" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginHorizontal="@dimen/text_margin"
                         android:layout_marginTop="@dimen/text_margin"
                         android:text="Name: MIT Aurangabad"
                         android:textColor="@color/textColor"
                         android:textSize="@dimen/text_size"
                         android:textStyle="bold" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginHorizontal="@dimen/text_margin"
                         android:layout_marginTop="@dimen/text_margin"
                         android:text="Address: Satara Parisar Aurangabad"
                         android:textColor="@color/textColor"
                         android:textSize="@dimen/text_size" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_margin="@dimen/text_margin"
                         android:layout_marginHorizontal="@dimen/text_margin"
                         android:text="Email : GsMandal.asia@gmail.com"
                         android:textColor="@color/textColor"
                         android:textSize="@dimen/text_size" />

                     <ImageView
                         android:id="@+id/map"
                         android:layout_width="wrap_content"
                         android:layout_height="230dp"
                         android:src="@drawable/google" />

                     <View
                         android:layout_width="wrap_content"
                         android:layout_height="1dp"
                         android:layout_marginVertical="8dp"
                         android:background="#c1c1c1"/>

                  </LinearLayout>


               </LinearLayout>



            </com.google.android.material.card.MaterialCardView>


         </LinearLayout>


      </LinearLayout>


   </LinearLayout>




</androidx.core.widget.NestedScrollView>